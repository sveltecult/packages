{
	"name": "@sveltecult/sveltekit-crypto",
	"version": "0.0.2",
	"author": "Sveltecult <leader@sveltecult.com>",
	"description": "Collections of useful cryptographic helper functions designed to simplify common tasks such as hashing passwords, encoding and decoding JSON Web Tokens (JWT) for SvelteKit.",
	"keywords": [
		"sveltekit",
		"argon2",
		"jwt",
		"encryption",
		"decryption",
		"hashing",
		"hash",
		"encrypt",
		"decrypt"
	],
	"license": "MIT",
	"repository": {
	"type": "git",
		"url": "git+https://github.com/sveltecult/packages.git#sveltekit-crypto"
	},
	"bugs": {
		"url": "https://github.com/sveltecult/packages/issues"
	},
	"homepage": "https://github.com/sveltecult/packages/tree/sveltekit-crypto",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"@node-rs/argon2": "^1.5.2",
		"@node-rs/jsonwebtoken": "^0.2.3",
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.30.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.1.9",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@node-rs/argon2": "^1.5.2",
		"@node-rs/jsonwebtoken": "^0.2.3"
	}
}
