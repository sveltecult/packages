{
	"name": "@sveltecult/helpers",
	"version": "0.0.4",
	"author": "Sveltecult <leader@sveltecult.com>",
	"description": "Collections of useful number and string helper functions designed to simplify common tasks such as pluralization, email obfuscation, random string generation, and more.",
	"keywords": [
		"strings",
		"random-strings",
		"random",
		"obfuscate",
		"obfuscation",
		"plural",
		"pluralization",
		"inflector",
		"slug",
		"slugify",
		"slugs",
		"helpers"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sveltecult/packages.git#helpers"
	  },
	  "bugs": {
		"url": "https://github.com/sveltecult/packages/issues"
	  },
	  "homepage": "https://github.com/sveltecult/packages/tree/helpers",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"nanoid": "^5.0.4",
		"obfuscate-mail": "^1.5.1",
		"pluralize": "^8.0.0",
		"slugify": "^1.6.6"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.30.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.1.9",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@types/pluralize": "^0.0.33",
		"nanoid": "^5.0.4",
		"obfuscate-mail": "^1.5.1",
		"pluralize": "^8.0.0",
		"slugify": "^1.6.6"
	}
}
